<!DOCTYPE html>
<html>
  <%- include("partials/head") %>
  <body class="text-white">
    <%- include("partials/header") %>
    <main class="d-flex flex-column align-items-center">
      <div id="counter" class="text-center">
        <!-- <h2 class="text-dark">Counter</h2> -->
        <div
          id="jar-container"
          class="d-flex flex-row justify-content-center flex-wrap gap-3"
        ></div>
        <button
          id="add-jar"
          type="button"
          class="btn btn-outline-success align-self-center pt-1 text-dark mt-3 fs-3"
        >
          Add jar
        </button>

        <div id="seed-container" class="mt-4 pb-3 d-none">
          <div id="seed-info" class="text-primary bg-white mb-2 d-inline"></div>
          <div
            id="seed-buttons"
            class="btn-group btn-group-toggle gap-2 d-flex flex-row flex-wrap justify-content-center"
            data-toggle="buttons"
          ></div>
        </div>
      </div>

      <!-- <div id="fridge">
        <h2 class="text-dark mt-4">Fridge</h2>
      </div> -->
    </main>
    <script src="javascripts/sprouts.js" defer></script>
  </body>
</html>
