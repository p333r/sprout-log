<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body class="container">
    <%- include("partials/header") %>
    <div class="row justify-content-between">
      <div class="col-lg-6">
        <h2>Users</h2>
        <ul class="text-dark">
          <% users.forEach((user) => { %>
          <li><%= user.key %></li>
          <% }); %>
        </ul>
      </div>
      <div class="col-lg-6">
        <h2>Seeds</h2>
        <ul class="text-dark">
          <% seeds.forEach((seed) => { %>
          <li><%= seed.key %></li>
          <% }); %>
        </ul>

        <h3>Add seed</h3>
        <form action="/seeds" method="post">
          <div class="col-6 mt-3">
            <input
              type="text"
              class="form-control"
              name="name"
              id="name"
              placeholder="Name - example: 'Broccoli'"
            />
          </div>
          <div class="col-6 mt-3">
            <input
              type="number"
              class="form-control"
              name="gramsPerJar"
              id="gramsPerJar"
              placeholder="Grams per jar - example: '30'"
            />
          </div>
          <div class="col-6 mt-3">
            <input
              type="text"
              class="form-control"
              name="growTime"
              id="growTime"
              placeholder="Grow time - example: '4-5 days'"
            />
          </div>
          <div class="col-6 mt-3">
            <input
              type="text"
              class="form-control"
              name="soakTime"
              id="soakTime"
              placeholder="Soak time - example: '8-10 hours'"
            />
          </div>
          <div class="mt-3 row">
            <div class="offset-sm-2 col-sm-8">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
