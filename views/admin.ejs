<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body class="container">
    <%- include("partials/header") %>
    <div class="row">
      <div class="col-lg-4 text-center mt-4">
        <h2>Users</h2>
        <ul class="text-dark list-group" id="users-list">
          <% users.forEach((user) => { %>
          <li class="list-group-item"><%= user.key %></li>
          <% }); %>
        </ul>
      </div>
      <div class="col-lg-4 mt-4">
        <div>
          <h2 class="text-center">Seeds</h2>
          <ul class="text-dark list-group" id="seeds-list">
            <% function deleteSeed() { window.alert("deleted")}
            seeds.forEach((seed) => { %>
            <li class="list-group-item d-flex justify-content-center">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="<%= seed.key %>"
                  id="<%= seed.key %>"
                />
                <label class="form-check-label" for="<%= seed.key %>">
                  <%= seed.key %>
                </label>
              </div>
            </li>
            <% }); %>
          </ul>
          <div class="d-flex justify-content-center">
            <Button
              id="deleteSeedBtn"
              type="button"
              class="btn btn-danger mt-3 position"
              >Delete</Button
            >
          </div>
        </div>
      </div>
      <div class="col-lg-4 d-flex justify-content-center text-center mt-4">
        <div class="col-12">
          <h2>Add seed</h2>
          <form action="/seeds" id="add-seed-form" method="post">
            <div>
              <input
                type="text"
                class="form-control text-center"
                name="name"
                id="name"
                placeholder="Name - example: 'Broccoli'"
              />
            </div>
            <div class="mt-3">
              <input
                type="text"
                class="form-control text-center"
                name="gelatinous"
                id="gelatinous"
                placeholder="Gelatinous - example: 'Yes' or 'No'"
              />
            </div>
            <div class="mt-3">
              <input
                type="number"
                class="form-control text-center"
                name="gramsPerJar"
                id="gramsPerJar"
                placeholder="Grams per jar - example: '30'"
              />
            </div>
            <div class="mt-3">
              <input
                type="text"
                class="form-control text-center"
                name="growTime"
                id="growTime"
                placeholder="Grow time - example: '4-5 days'"
              />
            </div>
            <div class="mt-3">
              <input
                type="text"
                class="form-control text-center"
                name="soakTime"
                id="soakTime"
                placeholder="Soak time - example: '8-10 hours'"
              />
            </div>
            <div class="mt-3 row">
              <div class="offset-sm-2 col-sm-8">
                <button type="submit" class="btn btn-primary" id="addSeedBtn">
                  Submit
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/javascripts/admin.js" defer></script>
  </body>
</html>
